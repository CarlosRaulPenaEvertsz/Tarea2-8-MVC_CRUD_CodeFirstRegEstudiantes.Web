@model IEnumerable<MVC_CRUD_CodeFirstRegEstudiantes.Model.Models.Curso>

@{
    ViewBag.Title = "Index";
}

<h2>Cursos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Curso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.CursoID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CursoID }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.CursoID })
        </td>
    </tr>
}

</table>
